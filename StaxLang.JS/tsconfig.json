{
    "compilerOptions": {
        "lib": ["dom", "es2016", "esnext.bigint"],
        // "incremental": true, // TODO: figure out why this is giving stale errors
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "noImplicitAny": true,
        "sourceMap": true, // stripped by webpack for distribution, but used in debug
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "outDir": "js"
    }
}